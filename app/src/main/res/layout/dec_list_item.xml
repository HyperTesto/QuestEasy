<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_width="match_parent"
							android:layout_height="80dp"
							android:layout_marginStart="10dp"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:layout_marginEnd="10dp"
							android:paddingTop="5dp"
							android:paddingBottom="5dp"
							android:paddingLeft="10dp"
							android:background="?android:attr/activatedBackgroundIndicator"
							>


	<ImageView
			android:id="@+id/decWarningImg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:src="@drawable/warning"
			/>

	<TextView
			android:id="@+id/decDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@id/decWarningImg"
			android:layout_toStartOf="@id/decWarningImg"
			android:text="16/07/9999 - 16/09/8903804"
			android:textColor="#000000"
			android:textSize="20sp"/>

	<TextView
			android:id="@+id/decCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@id/decDate"
			android:layout_toLeftOf="@id/decWarningImg"
			android:layout_toStartOf="@id/decWarningImg"
			android:textColor="@android:color/tertiary_text_light"
			android:text="fkdjfjsfasfhafkjsaflahsdfkjjasdfjaskldfjl"
			android:textSize="20sp"
		/>

</RelativeLayout>