<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="80dp"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_marginStart="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginEnd="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp">

	<ImageView
		android:id="@+id/guestTypeImg"
		android:layout_width="45dp"
		android:layout_height="45dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		/>
	<ImageView
		android:id="@+id/guestWarningImg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/warning"/>

	<TextView
		android:id="@+id/guestNameAndSurname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/guestTypeImg"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="5dp"
		android:layout_alignParentTop="true"
		android:layout_centerVertical="true"
		android:text="Pinco Panco"
		android:textColor="#000000"
		android:textSize="18sp"/>

	<TextView
		android:id="@+id/guestBirthPlace"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/guestNameAndSurname"
		android:layout_toRightOf="@id/guestTypeImg"
		android:layout_alignLeft="@id/guestNameAndSurname"
		android:layout_marginTop="8dp"
		android:text="Ospite Singolo"
		android:textSize="14sp"/>

</RelativeLayout>